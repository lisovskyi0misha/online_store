    <form id="form" action="">
      <div class="backdrop is-hidden" data-modal>
        <div class="modal">
          <button class="modal-close-btn" type="button" data-modal-close="">
            <svg width="18" height="18">
              <use href="./images/symbol-defs.svg#close-modal"></use>
            </svg>
          </button>
          <div class="modal-content">
            <h2 class="modal-main-title">
              Zostaw swoje dane w formularzu poniżej
            </h2>
            <p class="modal-title">Imie</p>
            <input class="input" type="text" />

            <p class="modal-title">Telefon</p>
            <input
              class="input"
              type="tel"
              pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
              required
            />
            <input type="file" />
            <p class="modal-title">Email</p>
            <input
              class="input"
              type="email"
              id="email"
              pattern=".+@globex\.com"
              required
            />

            <p class="modal-title">Komentarz</p>
            <input class="input" type="text" />

            <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike" />
            <label for="checkbox-text"
              >Oświadczam iż akceptuję
              <a class="checkbox-link" href="#">Regulamin</a> i
              <a class="checkbox-link" href="#"
                >Politykę Prywatności.</a
              > </label
            ><br />
            <div class="mod-btn-wrapper">
              <a class="modal-btn">Wyślij</a>
            </div>
          </div>
        </div>
      </div>
    </form>
